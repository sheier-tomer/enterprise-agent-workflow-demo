# =====================================================
# ENTERPRISE AGENTIC WORKFLOW ENGINE - ENVIRONMENT CONFIGURATION
# =====================================================
# This is a DEMO project with synthetic data only.
# Do not use in production or with real customer data.
# =====================================================

# Database Configuration
DATABASE_URL=postgresql+asyncpg://workflow_user:workflow_pass@db:5432/workflow_db
DATABASE_ECHO=false

# LLM Configuration
# Leave OPENAI_API_KEY empty to use mock mode (no API calls, deterministic outputs)
# Set OPENAI_API_KEY to enable real LLM mode with OpenAI API
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
USE_MOCK_LLM=true

# Embedding Configuration
# Options: "openai" or "sentence-transformers" or "mock"
EMBEDDING_PROVIDER=sentence-transformers
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Application Configuration
APP_NAME=Enterprise Agentic Workflow Engine
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# Guardrails Configuration
MAX_TOOL_CALLS_PER_WORKFLOW=20
CONFIDENCE_THRESHOLD=0.7

# Data Seeding
SEED_ON_STARTUP=true
SEED_CUSTOMERS_COUNT=50
SEED_TRANSACTIONS_COUNT=500
SEED_POLICIES_COUNT=10

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1
